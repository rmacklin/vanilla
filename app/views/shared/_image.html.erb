<div class="col-xs-12 col-sm-6 col-lg-4">
  <div class="card">
    <%= link_to image_tag(image.url, class: 'card__image'), image, class: 'card__image-container' %>

    <ul class="tag-list">
      <% image.tags.each do |tag| %>
          <li class="tag-list__item"><%= link_to tag, tag_path(tag.name) %></li>
      <% end %>
    </ul>
  </div>
</div>
